<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basicAuthlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.login.fragments.auth.authMethod.BasicAuth">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_auth_auth_method_basic_auth.title"
        android:textColor="@color/asgardeo_colour"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/asgardeo_secondary"
        android:drawableTint="@color/asgardeo_colour_variant"
        android:ems="10"
        android:foregroundTint="@color/asgardeo_colour_variant"
        android:hint="@string/activity_login_auth_auth_method_basic_auth.username"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/font_accent_black"
        android:textColorLink="@color/asgardeo_colour"
        android:textCursorDrawable="@color/asgardeo_colour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/password"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/asgardeo_secondary"
        android:ems="10"
        android:hint="@string/activity_login_auth_auth_method_basic_auth.password"
        android:inputType="textPassword"
        android:textColor="@color/font_black"
        android:textColorHighlight="@color/asgardeo_colour"
        android:textColorHint="@color/font_accent_black"
        android:textColorLink="@color/asgardeo_colour"
        android:textCursorDrawable="@color/asgardeo_colour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signinBasicAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/activity_login_auth_auth_method_basic_auth.sign_in"
        android:textColor="@color/font_white"
        app:backgroundTint="@color/asgardeo_colour"
        app:iconTint="@color/font_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_auth_auth_method_basic_auth.description"
        android:textColor="@color/font_accent_black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>