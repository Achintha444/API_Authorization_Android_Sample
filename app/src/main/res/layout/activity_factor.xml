<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background_white"
    tools:context=".ui.Factor">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:background="@color/asgardeo_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/logoView"
            android:name="com.example.api_auth_sample.ui.common.Logo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:padding="32dp"
            tools:layout="@layout/fragment_logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@color/asgardeo_colour" />

    </RelativeLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/authLayoutView"
        android:name="com.example.api_auth_sample.ui.auth.AuthFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintVertical_bias="0.236"
        tools:layout="@layout/fragment_auth" />

</androidx.constraintlayout.widget.ConstraintLayout>